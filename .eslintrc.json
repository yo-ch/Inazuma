{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-console": ["error", {
      "allow": ["log", "warn", "error"]
    }],
	"semi": ["error", "always"],
	"arrow-parens": ["error", "always"],
	"curly": ["error", "all"]
  }
}
